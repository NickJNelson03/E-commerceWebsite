<%= form_with model: @product do |form| %>
   <div class="backdrop">
     <%= form.file_field :image, placeholder: "Product Image" %>
     <%= form.text_field :title, placeholder: "Name of Product", autofocus: "autofocus" %>
     <%= form.hidden_field :brand_id %>
     <%= form.text_field :desc, placeholder: "Description" %>
     <%= form.number_field :price, in: 0.50..10000.00, step: 0.01, placeholder: "Price" %>
     <%= form.number_field :stock, in: 1..10000, step: 1, placeholder: "Stock" %>
     <%= form.submit %>
   </div>
<% end %>
