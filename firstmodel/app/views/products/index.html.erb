<h1>All Products</h1>
<div class="row row-cols-xl-4 row-cols-md-3 row-cols-2 g-3">
  <% @products.each do |product| %>
    <div class="col">
      <div class="card">
        <%= image_tag product.getimage, class: "card-img-top" %>
        <div class="card-body">
        <h5 class="card-title">
          <a class="card-link" href="/products/<%= product.id %>">
            <%= product.title %>
          </a>
        </h5>
        <div class="card-text container text-center">
          <div class="row align-items-end">
            <div class="col info">
	      Price:
              $<%= "%.2f" % product.price %>
            </div>
            <div class="col info">
              <%= product.stock %> 
              remaining
            </div>
            <!-- Add to Cart Form -->
            <%= form_with url: cart_items_path, local: true do |form| %>
              <%= form.hidden_field :product_id, value: product.id %>
              <%= form.number_field :quantity, value: 1, min: 1, class: 'form-control-sm' %>
              <%= form.submit "Add to Cart", class: 'btn btn-primary btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

