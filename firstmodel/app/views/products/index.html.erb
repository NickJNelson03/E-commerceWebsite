<style>
.card {
    width: 100%;
    height: auto;
    color: beige;
    background-color: #2209095c;
}
.card:hover {
    box-shadow: 0px 0px 1em 3px #796954;
}
.card-img-top {
    width:100%;
    height:100%;
}

.card-text {
    white-space:wrap;
    font-size: smaller;
}

.card-title {
    font-size: medium;
}

.col.info {
    white-space: nowrap;
    padding-left: 5    <div class="col">
      One of three columns
    </div>
    <div class="col">
      One of three columns
    </div>px;
    padding-right 0px;
}
.card-link {
    color: #fac823;
    text-decoration-line: blink;
}
.card-link:hover {
    color: white;
</style>

<h1>All Products</h1>
<div class="row row-cols-xl-4 row-cols-md-3 row-cols-2 g-3">
  <% @products.each do |product| %>
    <div class="col">
      <div class="card">
        <%= image_tag product.getimage, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title">
            <a class="card-link" href="/products/<%= product.id %>">
              <%= product.title %>
            </a>
          </h5>
          <div class="card-text container text-center">
            <div class="row align-items-end">
              <div class="col info">
                Price: $<%= "%.2f" % product.price %>
              </div>
              <div class="col info">
                <%= product.stock %> remaining
              </div>
            </div>
            <% if product.stock > 0 %>
              <%= form_with url: cart_items_path, local: true do |form| %>
                <%= form.hidden_field :product_id, value: product.id %>
                <%= form.number_field :quantity, min: 1, max: product.stock, value: 1, class: 'form-control' %>
                <%= form.submit 'Add to Cart', class: 'btn btn-primary' %>
              <% end %> <!-- Closing end for form_with -->
            <% else %>
              <span class="text-muted">Out of stock</span>
            <% end %> <!-- Closing end for if product.stock > 0 -->
          </div>
        </div>
      </div>
    </div>
  <% end %> <!-- Closing end for @products.each do |product| -->
</div>
  

