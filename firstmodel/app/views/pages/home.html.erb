<style>
/* Reset default margin and padding */
  body, h1, h2, h3, p, ul, li {
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
    background: linear-gradient(to right, rgba(202, 159, 18, 0.877), rgba(32, 31, 31, 0.352));
    margin: 0;
    padding: 0;
  }

/* Navbar styles */
  .navbar {
    font-weight: 500;
    background: linear-gradient(to right, #ad9f66, black);
    padding: 10px 20px;
  }

  .navbar-toggler {
    background-color: #69603f;
  }

  .navbar-brand {
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    padding-top: 2px;
    font-size: 1.5rem;
  }

  .navbar-nav {
    margin-left: auto;
  }

  .navbar-nav li {
    margin-right: 20px;
  }

  .navbar-nav li a {
    color: white;
    text-decoration: none;
    transition: color 0.3s;
  }

  .navbar-nav li a:hover {
    color: #f4ca34;
  }
  .searchbar {
    height: 50px;
    margin-top: 10px;
  }
/* Hero section styles */
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url('https://educatedquest.com/wp-content/uploads/2021/08/Screen-Shot-2021-08-02-at-1.33.56-PM.png');
    background-size: cover;
    background-position: center;
    text-align: center;
    padding: 100px 20px;
    color: #fff;
    position: relative;
  }
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    color: rgb(0, 0, 0);
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  }

  .hero p {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color:#f6f7f8;
    font-family: cursive;
    background: transparent;
    background-color:rgba(73, 66, 66, 0.625);
    padding: 10px;
  }

/* Product card styles */

  .product-image {
    max-width: 100%;
    height: auto;
    margin-bottom: 20px;
    background-color:#000102;
  }
  .price {
    font-weight: bold;
    font-size: 1.5rem;
    margin-right: 20px; /* Add margin between image and price */
  }
  .stock {
    font-size: 1.2rem;
    color: #f4ca34;
  }
  .flex-container {
    display: flex;
    align-items: center; /* Center items vertically */
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  .product {
    border: 1px solid #ddd;
    margin-bottom: 20px;
    padding: 10px;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .product:hover {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  .product img {
    max-width: 100%;
    height: auto;
  }
  .product-details {
    display: none;
  }
  .product.active .product-details {
    display: block;
  }
  @keyframes slide-up {
    from {
      transform: translateY(50px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Animation for "Hot discounts available" */
  @keyframes moveRight {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(0%);
    }
  }
  .hot-discounts {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    color: white;
    font-size: 2rem;
    padding: 10px 20px;
    background-color: rgba(0, 0, 0, 0.5);
    animation: moveRight 5s infinite alternate;
  }
  .btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: #ffd000;
    color: #fff;
    text-decoration: none;
    border-radius: 3px;
    margin-top: 10px;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: #d3dce5;
  }

  /* Footer styles */
  footer {
    color: #fff;
    text-align: center;
    padding: 20px 0;
    background-color: #333;
  }
</style>
</head>
<body>
    <main>
        <section class="hero">
            <h1>Welcome to Ken-Comm</h1>
            <p>Discover amazing deals on a wide range of products</p>
            <a href="/products" class="btn">Shop Now</a>
        </section>
        <a href="another_page.html" style="text-decoration: none;">
<span class="hot-discounts" style="color: white;font-family: cursive;"> ðŸ”¥ discounts available</span>
</a>
        <section class="products">
          <div class="row">
          <% @sample.each do |product| %>
            <div class="col-md-3">
                <div class="product" onclick="toggleDetails(this)">
                    <%= image_tag product.getimage, alt: "Product Image", width: "250" %>
                    <h3> <%= product.title %> </h3>
                    <p> $<%= "%.2f" % product.price %> </p>
                    <div class="product-details">
                        <p><%= product.desc %> </p>
                        <button class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
          <% end %>
        </div>
    </div>

        </section>
    </main>
    <footer>
        <p>&copy; 2024 Ken-Comm. All Rights Reserved.</p>
    </footer>
</body>
</html>
